{
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.indentSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.renderWhitespace": "all",
  "editor.formatOnSave": true,
  "editor.rulers": [80, 100, 120],
  "files.trimTrailingWhitespace": true,
  "deno.enable": true,
  "deno.lint": true,
  "cSpell.words": ["fenv"]
}
